<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mareu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.openclassrooms.mareu.ui.meeting_list.NewMeetingActivity"
            android:label="@string/title_activity_add_meeting"
            android:parentActivityName="com.openclassrooms.mareu.ui.meeting_list.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.openclassrooms.mareu.ui.meeting_list.ItemListActivity" />
        </activity>
        <activity
            android:name="com.openclassrooms.mareu.ui.meeting_list.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.openclassrooms.mareu.ui.meeting_list.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.openclassrooms.mareu.ui.meeting_list.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.openclassrooms.mareu.ui.meeting_list.ItemListActivity" />
        </activity>
    </application>

</manifest>